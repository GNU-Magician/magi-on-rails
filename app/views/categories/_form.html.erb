<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form" }) do |field| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= field.label :name %><br>
    </div>
    <div class="col-sm-8">
      <%= field.text_field :name, class: "form-control", placeholder: "Enter category" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= field.submit(@category.new_record? ? "Sign Up" : "Update account", class: 'btn btn-primary btn-lg') %>
    </div>
  </div>
<%end%>
<div class="col-sm-4 col-sm-offset-4" id="cancel_link">
  <strong><%= link_to "[Cancel request and return to articles listing.]", articles_path, id: "cancel-link" %></strong>
</div>