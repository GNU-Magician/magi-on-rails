<h1 align="center">Log In</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form" }, url: login_path) do |field| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= field.label :username %><br>
    </div>
    <div class="col-sm-8">
      <%= field.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= field.label :password %>
    </div>
    <div class="col-sm-8">
      <%= field.password_field :password, class: "form-control", placeholder: "Enter your password", autocomplete: "off" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= field.submit "Login", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<%end%>
<div class="col-sm-4 col-sm-offset-4" id="cancel_link">
  <strong><%= link_to "[Cancel request and return to articles listing.]", articles_path, id: "cancel-link" %></strong>
</div>