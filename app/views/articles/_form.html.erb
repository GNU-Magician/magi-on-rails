<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="row-xs-12">

    <%= form_for(@article, :html => {class: "form-horizontal", role: "form" }) do |field| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= field.label :title %><br>
        </div>
      <div class="col-sm-8">
        <%= field.text_field :title, class: "form-control", placeholder: "Title of article" %>
      </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= field.label :description %>
        </div>
        <div class="col-sm-8">
          <%= field.text_area :description, rows:10, class: "form-control", placeholder: "Description" %>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= field.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text}%>

          <% end %>

        </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= field.submit  class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
      </div>
    <%end%>
    <div class="col-sm-4 col-sm-offset-4" id="cancel_link">
      <strong><%= link_to "[Cancel request and return to articles listing.]", articles_path, id: "cancel-link" %></strong>
    </div>
  </div>
