<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="row-xs-12">

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form" }) do |field| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= field.label :username %><br>
        </div>
        <div class="col-sm-8">
          <%= field.text_field :username, class: "form-control", placeholder: "Enter username" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= field.label :email %>
        </div>
        <div class="col-sm-8">
          <%= field.email_field :email, class: "form-control", placeholder: "Enter email." %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= field.label :password %>
        </div>
        <div class="col-sm-8">
          <%= field.password_field :password, class: "form-control", placeholder: "Type in the password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= field.submit(@user.new_record? ? "Sign Up" : "Update account", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
      </div>
    <%end%>
    <div class="col-sm-4 col-sm-offset-4" id="cancel_link">
      <strong><%= link_to "[Cancel request and return to articles listing.]", articles_path, id: "cancel-link" %></strong>
    </div>

    </div>
